{
  "name": "ech-0160-dimag-ingest",
  "description": "Standalone Applikation für die Vorbereitung eines DIMAG Ingests von eCH-0160 SIPs",
  "keywords": [
    "dimag",
    "ingest",
    "archive",
    "long-term archive",
    "oais"
  ],
  "version": "1.0.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kilchenmann/eDing.git"
  },
  "bugs": {
    "url": "https://github.com/kilchenmann/eDing/issues",
    "email": "ak@avdimag.ch"
  },
  "author": {
    "name": "AV DIMAG (André Kilchenmann)",
    "email": "ak@avdimag.ch",
    "url": "http://av-dimag.ch"
  },
  "main": "main.js",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "yarn build:lib && yarn build:app",
    "build:app": "ng build --configuration production",
    "build:app-dev": "ng build --configuration development",
    "build:app-dev-watch": "ng build --configuration development --watch=true",
    "build:electron": "ng build && electron .",
    "build:electron-dev": "yarn build-app-dev && electron .",
    "build:lib": "ng build --configuration production --project @av-dimag/ingest && cp README.md dist/@av-dimag/ingest/",
    "build:lib-dev": "ng build --configuration development --project @av-dimag/ingest",
    "build:lib-dev-watch": "ng build --configuration development --project @av-dimag/ingest --watch=true",
    "build:page": "ng build --base-href /ingest-poc/",
    "lint:app": "eslint --color --fix -c .eslintrc.js --ext .ts ./src/app",
    "lint:app-ci": "eslint --color -c .eslintrc.js --ext .ts ./src/app",
    "lint:lib": "eslint --color --fix -c .eslintrc.js --ext .ts ./projects/ingest/src/lib",
    "lint:lib-ci": "eslint --color -c .eslintrc.js --ext .ts ./projects/ingest/src/lib",
    "test:app": "ng test",
    "test:app-ci": "ng test --watch=false --browsers=ChromeHeadless",
    "test:lib": "ng t --project @av-dimag/ingest",
    "test:lib-ci": "ng t --watch=false --browsers=ChromeHeadless --project @av-dimag/ingest",
    "prep-testdata": "./prepare-testdata.sh"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^14.2.0",
    "@angular/cdk": "^14.2.1",
    "@angular/common": "^14.2.0",
    "@angular/compiler": "^14.2.0",
    "@angular/core": "^14.2.0",
    "@angular/forms": "^14.2.0",
    "@angular/material": "^14.2.1",
    "@angular/platform-browser": "^14.2.0",
    "@angular/platform-browser-dynamic": "^14.2.0",
    "@angular/router": "^14.2.0",
    "@types/jsontoxml": "^1.0.3",
    "js2xmlparser": "^5.0.0",
    "json-xml-parse": "^1.2.1",
    "jsontoxml": "^1.0.1",
    "rxjs": "~7.5.0",
    "tslib": "^2.3.0",
    "xmltojson": "1.3.5",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^14.2.2",
    "@angular-eslint/eslint-plugin": "^14.1.2",
    "@angular/cli": "~14.2.2",
    "@angular/compiler-cli": "^14.2.0",
    "@types/jasmine": "~4.0.0",
    "@types/jest": "^29.1.0",
    "@types/node": "^18.7.18",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "electron": "^20.2.0",
    "electron-builder": "^23.6.0",
    "eslint": "^8.24.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsdoc": "^39.3.6",
    "jasmine-core": "~4.3.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.0.0",
    "ng-packagr": "^14.2.0",
    "typescript": "~4.7.2"
  },
  "packageManager": "yarn@3.3.1"
}
